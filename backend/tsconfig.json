{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "rootDir": ".",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["jest", "node"],
      "typeRoots": ["./src/@types", "./node_modules/@types"],
      "baseUrl": ".", 
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src", "prisma"],
    "exclude": ["node_modules", "dist"]
  }
  